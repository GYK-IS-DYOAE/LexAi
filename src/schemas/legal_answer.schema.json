{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "dava_turu",
    "taraf_iliskisi",
    "sonuc",
    "karar",
    "gerekce",
    "hikaye",
    "kanun_atiflari",
    "kaynaklar"
  ],
  "properties": {
    "dava_turu": { "type": "string" },
    "taraf_iliskisi": { "type": "string" },
    "sonuc": {
      "type": "string",
      "enum": ["onama", "bozma", "ret", "kabul", "diger"]
    },
    "karar": { "type": "string" },
    "gerekce": { "type": "string" },
    "hikaye": { "type": "string" },
    "kanun_atiflari": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["kanun", "madde", "fikra", "span"],
        "properties": {
          "kanun": { "type": "string" },
          "madde": { "type": "string" },
          "fikra": { "type": "string" },
          "span": { "type": "string" }
        }
      }
    },
    "kaynaklar": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
